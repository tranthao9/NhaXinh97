@model IEnumerable<ModelNhaXinh.EF.RoomDetail>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
    int i = 1;
}
<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Quản lý chi tiết phòng <small></small></h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Quản lý phòng</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="card-box table-responsive ">
                                    <button class="float-right btn btn-warning mr-2 text-info">
                                        <i class="glyphicon glyphicon-plus "></i>
                                        @Html.ActionLink("Thêm mới ", "Create")
                                    </button>

                                    <table id="datatable-buttons" class="table bulk_action jambo_table table-striped table-bordered table-hover" style="width:100%">
                                        <thead>
                                            <tr class="headings">
                                                <th><input type="checkbox" id="check-all" class="flat"></th>
                                                <th>STT</th>
                                                <th class="column-title">
                                                    @Html.DisplayNameFor(model => model.Room.RooName)
                                                </th>
                                                <th class="column-title">
                                                    @Html.DisplayNameFor(model => model.RoDName)
                                                </th>
                                                <th class="column-title">
                                                    @Html.DisplayNameFor(model => model.Silde)
                                                </th>
                                                <th class="column-title">
                                                    @Html.DisplayNameFor(model => model.Status)
                                                </th>
                                                <th class="column-title no-link last">Tác vụ</th>
                                                <th class="bulk-actions" colspan="7">
                                                    <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr id="row_@item.RoDID">
                                                <td class="a-center ">
                                                    <input type="checkbox" class="flat" name="table_records">
                                                </td>
                                                <td>@(i++)</td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Room.RooName)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.RoDName)
                                                </td>
                                                <td>
                                                   <img width="50px" src="@item.Silde"/>
                                                </td>
                                                <td>
                                                    @Html.CheckBoxFor(modelItem => item.Status)
                                                </td>
                                                <td class="text-center text-danger" style="font-size: 16px">
                                                    @Html.ActionLink(" ", "Edit", new { id = item.RoDID }, new { @class = "text-danger glyphicon glyphicon-edit" }) |
                                                    @Html.ActionLink(" ", "Details", new { id = item.RoDID }, new { @class = "text-danger glyphicon glyphicon-info-sign" }) |
                                                    @Ajax.ActionLink(" ", "Delete", new { @id = item.RoDID }, new AjaxOptions
                                                   {
                                                       Confirm = "Bạn có chắc chắn muốn xóa ?",
                                                       OnComplete = " $('#row_" + @item.RoDID + "').remove()",
                                                       HttpMethod = "GET"
                                                   }, new { @class = "text-danger glyphicon glyphicon-remove" })

                                                </td>

                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
