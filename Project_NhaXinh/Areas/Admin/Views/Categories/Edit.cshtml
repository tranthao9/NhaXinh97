@model ModelNhaXinh.EF.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Loại nội thất</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Chỉnh sửa loại nội thất </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content ">
                        @using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CatID, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.CatID, new { @class = "form-control bg-light", disable = "disable" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CatName, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.CatName, new { @class = "form-control bg-light", required = true })
                                            @Html.ValidationMessageFor(model => model.CatName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MetaTitle, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.MetaTitle, new { @class = "form-control bg-light", required = true })
                                            @Html.ValidationMessageFor(model => model.MetaTitle, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.ParentID, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.ParentID, new { @class = "form-control bg-light ", required = true })
                                            @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DisplayOrder, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            <input type="number" value="@Model.DisplayOrder" min="0" class="form-control bg-light" name="DisplayOrder" />
                                            @Html.ValidationMessageFor(model => model.DisplayOrder, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CatDescription, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextAreaFor(model => model.CatDescription, new { @class = "form-control bg-light" })
                                            @Html.ValidationMessageFor(model => model.CatDescription, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                    <div class="col-sm-4 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group  ">
                                            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.CheckBoxFor(model => model.Status, new { @class = "ml-2 " })
                                        </div>
                                    </div>
                                    <div class="col-sm-4 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group  ">
                                            @Html.LabelFor(model => model.ShowMenu, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.CheckBoxFor(model => model.ShowMenu, new { @class = "ml-2 " })
                                        </div>
                                    </div>
                                </div>
                                <div class="">
                                    <div class="col-md-offset-2  pl-3">
                                        <input type="submit" value="Save" class="btn btn-warning" />
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
