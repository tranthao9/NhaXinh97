@model ModelNhaXinh.EF.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Loại nội thất</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Chi tiết loại nội thất </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content ">
                        @using (Html.BeginForm("Edit", "Categories", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <h1 class="text-danger" align="center">Chi tiết <span class="text-lowercase"> @Model.CatName</span></h1>
                                <table class="table table-striped table-bordered  jambo_table mt-3" style="max-width:550px; margin:auto">
                                    <tbody>
                                        <tr>
                                            <td class="text-dark font-weight-bold " style="width:35%">Mã loại nội thất</td>
                                            <td>@Model.CatID</td>
                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">Tên loại nội thất</td>
                                            <td>@Model.CatName</td>
                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">Tiêu đề đường dẫn</td>
                                            <td>@Model.MetaTitle</td>
                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">ParentID</td>
                                            <td>@Model.ParentID</td>
                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">Tình trạng</td>


                                            @if (Model.Status == true)
                                            {
                                                <td>Đang hoạt động</td>
                                            }
                                            else
                                            {
                                            <td>Ngưng hoạt động</td>
                                            }

                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">Hiển thị lên menu</td>
                                            @if (Model.ShowMenu == true)
                                            {
                                                <td>Hiển thị lên màn hình</td>
                                            }
                                            else
                                            {
                                                <td>Không hiển thị lên màn hình</td>
                                            }
                                           
                                        </tr>
                                        <tr>
                                            <td class="text-dark font-weight-bold">Mô tả</td>
                                            <td>@Model.CatDescription</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <p>
                                    @Html.ActionLink("Edit", "Edit", new { id = Model.CatID }) |
                                    @Html.ActionLink("Back to List", "Index")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

