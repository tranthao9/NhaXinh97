@model ModelNhaXinh.EF.Stuff

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layoutAdmin.cshtml";
}

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Loại nội thất</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Chỉnh sửa loại nội thất </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item" href="#">Settings 1</a>
                                    <a class="dropdown-item" href="#">Settings 2</a>
                                </div>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content ">
                        @using (Html.BeginForm("Create", "Stuffs", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal ">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.CatID, "CatID", htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.DropDownList("CatID", null, htmlAttributes: new { @class = "form-control bg-light" })
                                            @Html.ValidationMessageFor(model => model.CatID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.StuID, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.StuID, new { @class = "form-control bg-light", required = true })
                                            @Html.ValidationMessageFor(model => model.StuID, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.StuName, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextBoxFor(model => model.StuName, new { @class = "form-control bg-light", required = true })
                                            @Html.ValidationMessageFor(model => model.StuName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-sm-6 pl-3 pr-3" style="margin-top:15px">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.StuDescription, htmlAttributes: new { @class = "text-dark font-weight-bold" })
                                            @Html.TextAreaFor(model => model.StuDescription, new { @class = "form-control bg-light ", required = true })
                                            @Html.ValidationMessageFor(model => model.StuDescription, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="">
                                    <div class="col-md-offset-2 mt-3  pl-3">
                                        <input type="submit" value="Create" class="btn btn-danger" />
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

