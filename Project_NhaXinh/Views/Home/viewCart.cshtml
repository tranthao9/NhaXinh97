@model IEnumerable<ModelNhaXinh.EF.OrderDetail>

@{
    ViewBag.Title = "viewCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container m-3 mb-3">
    <h3>Giỏ hàng</h3>
</div>
<!-- Cart details -->
<div class="container-fluid mb-5">
    <div class="row">
        <div class="col-sm-7">

            @foreach (var cart in Model)
            {
                <div class="row  border-bottom mt-3 pb-3">

                    <div class="col-4">
                        <img class="fakeimg" src="@cart.Product.ProImage" alt="">
                    </div>
                    <div class="col-6 mt-2">
                        <a class="text-decoration-none text-dark h6 " href=""><p>@cart.Product.ProName</p></a>
                        <small>pa_vat-lieu: 583</small><br>
                        <small>pa_kich-thuoc: 584</small>
                        <div class="d-flex"><span class="mt-2 mb-2 text-danger">27,540,000<span class="woocommerce-Price-currencySymbol">₫</span></span></div>
                        <a href="#" class="text-decoration-none text-dark mt-3" data-bs-toggle="tooltip" data-bs-placement="bottom" title="add to wishlist">
                            <i class="fa-solid fa-heart"></i>
                            Thêm vào Wishlist
                        </a>
                    </div>
                    <div class="col-2">
                        <a class="text-dark text-decoration-none " href=""><h6 class="ms-3">x</h6></a><br>
                        <input class="text-muted form-control mt-5" style="width:55px !important; padding: 0 5px 0 15px!important; line-height:  none !important;" type="number" name="" id="" min="1" value="@cart.Quantity">
                    </div>
                </div>
            }

            <div class="mt-3">
                <button class=" btn btn-dark  d-block h3 ">CẬP NHẬP GIỎ HÀNG</button>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="border ps-3 pe-3 pt-3 pb-3">
                <h4>Tóm tắt đơn hàng</h4>
                <div class="mt-3">
                    <span>Tạm tính</span>
                    <span class="fw-bold float-right">50,758,000<span class="woocommerce-Price-currencySymbol">₫</span></span>
                </div>
                <div class="mt-3">
                    <span>Giảm giá</span>
                    <span class="fw-bold float-right">0<span class="woocommerce-Price-currencySymbol">%</span></span>
                </div>
                <div class="mt-3">
                    <span>Vận chuyển</span>
                    <small class="float-right text-right">
                        Liên hệ phí vận chuyển sau<br>
                        Shipping options will be updated during checkout.
                    </small>
                </div>
                <div class="mt-5">
                    <span>Mã giảm giá/Quà tặng</span>
                </div>
                <div class="input-group mt-2 ms-3 btn-outline-light">
                    <input type="text" class="form-control" placeholder="Nhập mã giảm giá">
                    <button class="input-group-text  btn-dark btn-outline-light me-3">ÁP DỤNG</button>
                </div>
                <div class="mt-3">
                    <span>Thành tiền (Đã bao gồm VAT 10%)</span>
                    <span class="fw-bold float-right">50,758,000<span class="woocommerce-Price-currencySymbol">₫</span></span>
                </div>
                <div class="mt-3">
                    <h6>Thông tin giao hàng</h6>
                    <small class="lh-lg">Đối với những sản phẩm có sẵn tại khu vực, Nhà Xinh sẽ giao hàng trong vòng 2-7 ngày. Đối với những sản phẩm không có sẵn, thời gian giao hàng sẽ được nhân viên Nhà Xinh thông báo đến quý khách.</small>
                    <p class="mt-3">Từ 2-6: 8:30 - 17:30</p>
                    <p class="mt-3">Thứ 7, CN: 9:30 - 16:30</p>
                    <a href="" class="text-decoration-none text-warning">Cửa hàng gần bạn</a>
                </div>
                <div class="d-flex mt-4">
                    <button class=" btn btn-outline-dark w-50 ms-3 fw-bold"><i class="fa-solid fa-left-long me-2"></i>TIẾP TỤC MUA HÀNG</button>
                    <button class="float-right btn btn-dark ms-3 w-50 fw-bold">ĐẶT HÀNG</button>
                </div>
            </div>
        </div>
    </div>
</div>
